                                <option value="false">Female</option>
                                <option value="false">Trangender</option>
                            </select>
                        </div>

                        <div class="form-group mt-1">
                            <label asp-for="PhoneNumber"></label>
                            <input asp-for="PhoneNumber" id="PhoneNumber" name="PhoneNumber"
                                   class="form-control" />
                        </div>
                        <div class="form-group mt-1">
                            <label asp-for="Address"></label>
                            <input asp-for="Address" id="Address" name="Address"
                                   class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button id="sumbit" class="btn btn-success btn-block" type="submit">Submit</button>
                </div>
            </form>
        </div>


        <div>
