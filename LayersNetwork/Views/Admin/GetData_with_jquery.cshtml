                    <a asp-action="About_us" asp-route-ID="#" class="gfg" onclick="return confirm('Are you sure you wish to Save this Data?');">  About us </a>
                </div>*@
            <form id=" myform">
                @*<form asp-action="Create" method="post" enctype="multipart/form-data">*@
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">
                            <h4>Create Category</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group mt-1">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" id="Name" name="Name"
                                   class="form-control" />
                        </div>

                        <div class="form-group mt-1">
                            <label asp-for="Age"></label>
                            <input asp-for="Age" id="Age" name="Age"
                                   class="form-control" />
                        </div>
                        <div class="form-group mt-1">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" id="Email" name="Email"
                                   class="form-control" />
                        </div>

                        <div class="form-group mt-1">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" id="Password" name="Password"
