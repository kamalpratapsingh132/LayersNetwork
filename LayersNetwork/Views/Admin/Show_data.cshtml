@model IEnumerable<Layers.DAL.EntityDbContext.Employee>


@{
    ViewData["Title"] = "Show_data";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AllEmployees</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    @*<link href="~/css/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />*@
    <link href="~/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
</head>
<body>
<div class="content-wrapper ">
    <a asp-action="Create">Create</a>
    <h1>Show all </h1>
    <table class="table table-bordered" id="example">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Age</th>
                <th>Email</th>
                <th>Gender</th>
                <th>PhoneNumber</th>
                <th>Address</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var er in Model)
            {
                <tr>
                    <td>@er.ID</td>
                    <td>@er.Name</td>
                    <td>@er.Age</td>
                    <td>@er.Email</td>
                    <td>@er.Gender</td>
                    <td>@er.PhoneNumber</td>
                    <td>@er.Address</td>
                    <td>
                        <a asp-action="Update" asp-controller="Admin" asp-route-id="@er.ID"  class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-controller="Admin" asp-route-id="@er.ID"  
                     class="btn btn-danger" onclick=" return confirm('Do you want to delete this Employee Record ?'" >Delete </a>
                    </td>

                </tr>
            }
        </tbody>
       
    </table>
</div>
@section Scripts
{

    @*<script src="~/css/datatables/js/jquery.dataTables.min.js"></script>*@
    <script src="~/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/datatables/js/dataTables.bootstrap4.js"></script>
    @*<script src="~/css/datatables/js/dataTables.bootstrap4.js"></script>*@
}

<script>

    $(document).ready(function () {
        $('#example').DataTable();
    });


</script>
</body>



